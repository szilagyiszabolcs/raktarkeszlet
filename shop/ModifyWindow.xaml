<Window x:Class="shop.ModifyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:shop"
        mc:Ignorable="d"
        Title="Módosítás" Height="200" Width="400">
    <Grid>
        <Label Content="Vonalkód" HorizontalAlignment="Left" Margin="56,5,0,0" VerticalAlignment="Top"/>
        <TextBox Name="vonalkod" HorizontalAlignment="Left" Height="23" Margin="131,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="190"/>

        <Label Content="Megnevezés" HorizontalAlignment="Left" Margin="56,55,0,0" VerticalAlignment="Top"/>
        <TextBox Name="nev" HorizontalAlignment="Left" Height="23" Margin="131,60,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="190"/>

        <Label Content="Egységár" HorizontalAlignment="Left" Margin="56,105,0,0" VerticalAlignment="Top"/>
        <TextBox Name="ar" HorizontalAlignment="Left" Height="23" Margin="131,110,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="190"/>

        <Button Name="modify" Content="Módosítás" HorizontalAlignment="Left" Margin="150,139,0,0" VerticalAlignment="Top" Width="75" Click="Modify_Click"/>
    </Grid>
</Window>
